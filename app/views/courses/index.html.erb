<h2>U.A. Course Index</h2>

<table class="table-shade" align="center">
  <tr>
    <th>Course Name</th>
    <th>Course Hours</th>
    <th>View | Edit</th>
    <th>Delete</th>
  </tr>
  <% @course.each do |s| %>
    <tr id="course-<%=s.id%>">
      <td><%= s.name %></td>
      <td>
        <center><%= s.class_hours %></center>
      </td>
      <td>
        <center>
          <%= link_to 'View', admin_course_path(session[:user_id], s)%>
        </center>
      </td>
      <td>
        <center><%= link_to "Delete", admin_course_path(session[:user_id], s), remote: true, method: :delete, data: { confirm: 'Are you sure?'} %></center>
      </td>
    </tr>
  <% end %>
</table>
