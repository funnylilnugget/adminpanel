<h1>U.A. High School Cohort Registration</h1>

<%= form_for (@cohort) do |f| %>

<h5><%= f.label :name %></h5>
<%= f.text_field :name %><br>

<h5><%= f.label :start_date %></h5>
<%= f.date_field :start_date %><br>

<h5><%= f.label :end_date %></h5>
<%= f.date_field :end_date %><br>

<h5><%= f.label :course %></h5>
<%= f.select(:course_id, Course.all.collect { |course| [course.name, course.id]},{include_blank: true }) %><br>

<h5><%= f.label :teacher %></h5>
<%= f.select(:teacher_id, Teacher.all.collect { |teacher| [teacher.first_name, teacher.last_name, teacher.id]},{include_blank: true }) %><br>

<% f.collection_check_boxes(:cohort, :student_ids, Student.all, :student_id, @student.first_name) %>


<%= f.submit "Create Cohort" %>

<% end %>
