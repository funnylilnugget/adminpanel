<h1>U.A. High School Cohort Registration</h1>

<div class="grid">
  <div></div>

  <div class="card">
    <div class="container">
      <%= form_for([@admin, @cohort]) do |f| %>

      <h3><%= f.label :name %></h3>
      <%= f.text_field :name %><br>

      <h3><%= f.label :start_date %></h3>
      <%= f.date_field :start_date %><br>

      <h3><%= f.label :end_date %></h3>
      <%= f.date_field :end_date %><br>

      <h3><%= f.label :course %></h3>
      <%= f.select(:course_id, Course.all.collect { |course| [course.name, course.id]},{include_blank: true }) %><br>

      <h3><%= f.label :teacher %></h3>
      <%= f.select(:teacher_id, Teacher.all.collect { |teacher| ["#{teacher.id} #{teacher.hero_name}"]},{include_blank: true }) %><br>

      <h3><%= f.label :student %></h3>
       <%= f.collection_select :student_ids, Student.order(:hero_name), :id, :hero_name, {}, { multiple: true, class: 'chosen-select' } %>

    <br><br>
    <%= f.submit "Create Cohort", class: "button" %>
  </div>

</div>
<div></div>
</div>

<%end%>
