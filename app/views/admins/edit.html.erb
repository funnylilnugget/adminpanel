<h1>Edit Account</h1>

<div class="grid">
  <div></div>

<div class="card">
  <div class="container">
  <%= form_for (@admin) do |f| %>

  <h3><%= f.label :first_name %></h3>
  <%= f.text_field :first_name %>

  <h3><%= f.label :last_name %></h3>
  <%= f.text_field :last_name %>

  <h3><%= f.label :user_name %></h3>
  <%= f.text_field :user_name %>

<h3><%= f.label :email %></h3>
<%= f.email_field :email %><br>


<h3><%= f.label :password %></h3>
  <%= f.password_field :password, placeholder: "Password" %><br><br>
       <%= f.password_field :password_confirmation, placeholder: "Confirm Password" %><br><br>
   </div>
 </div>

 <div></div>
</div>
<br>
<div class="button-center">
<%= f.submit "Update Info", class: "button" %>
</div>
<% end %>
